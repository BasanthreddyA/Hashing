class Solution {
public int firstUniqChar(String s) {
   Map<Character, Integer> map = new HashMap<Character, Integer>();
   for (int i=0; i<s.length(); i++) {
      int count = map.getOrDefault(s.charAt(i), 0);
      count ++;
      map.put(s.charAt(i), count);   //ny incrementig the counting value is inserted into the map
   }
   
   for (int i=0; i<s.length(); i++) {
      if (map.get(s.charAt(i)) == 1) { ////when the count is equals to 1 then the index of that eemnt is returned
         return i;//if we find unique charcter we return i;
      }
   }
   return -1;//else return -1
}
}



time complexity =o(n)
